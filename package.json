{
  "name": "vanilla-claude-code",
  "version": "0.1.0",
  "description": "An intuitive IDE for Claude Code CLI",
  "main": "dist/main/index.js",
  "author": {
    "name": "Vanilla Claude Code Contributors"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/lightwater2/vanilla-claude-code.git"
  },
  "bugs": {
    "url": "https://github.com/lightwater2/vanilla-claude-code/issues"
  },
  "homepage": "https://github.com/lightwater2/vanilla-claude-code#readme",
  "keywords": [
    "claude",
    "claude-code",
    "ide",
    "terminal",
    "ai",
    "coding-assistant"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm dev:renderer\" \"pnpm dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsx watch src/main/index.ts",
    "dev:electron": "electron .",
    "build": "pnpm build:renderer && pnpm build:main",
    "build:renderer": "vite build",
    "build:main": "tsx src/main/index.ts",
    "build:go": "go build -o bin/vanilla-claude-code ./cmd/main.go",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "prepare": "husky install"
  },
  "dependencies": {
    "@octokit/oauth-device": "^7.1.2",
    "@octokit/rest": "^21.0.0",
    "@xterm/xterm": "^5.5.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "electron-store": "^10.0.0",
    "isomorphic-git": "^1.27.1",
    "keytar": "^7.9.0",
    "monaco-editor": "^0.52.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.vanilla-claude-code.app",
    "productName": "Vanilla Claude Code",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "bin/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
